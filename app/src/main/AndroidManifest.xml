<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fitpay.fitpaysampleclient">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_devices">
        </activity>

        <activity
            android:name=".DevicesActivity"
            android:label="@string/title_activity_devices"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fitpay.fitpaysampleclient.MainActivity"/>
        </activity>

        <activity
            android:name=".CreditCardsActivity"
            android:label="@string/title_activity_credit_cards"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fitpay.fitpaysampleclient.MainActivity"/>
        </activity>

        <activity
            android:name=".CreditCardActivity"
            android:label="@string/title_activity_credit_card"
            android:parentActivityName=".CreditCardsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fitpay.fitpaysampleclient.CreditCardsActivity"/>
        </activity>

        <activity
            android:name=".DeviceActivity"
            android:label="@string/title_activity_device"
            android:parentActivityName=".DevicesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fitpay.fitpaysampleclient.DevicesActivity"/>
        </activity>

        <activity android:name=".TransactionsActivity"
            android:label="@string/title_activity_transactions">
        </activity>

        <activity android:name=".SelectDeviceActivity"/>
        <activity android:name=".TestBLEActivity"/>

    </application>

</manifest>
